<Window x:Class="WpfDataApp.CreateEditSeria"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDataApp"
        mc:Ignorable="d"
        Title="CreateEditSeria" Height="450" Width="800">
    <UniformGrid Columns="2">
        <TextBlock Text="Seria"></TextBlock>
        <TextBox Text="{Binding Name}"></TextBox>

        <TextBlock Text="About Seria"></TextBlock>
        <TextBox TextWrapping="Wrap" Text="{Binding DetaledInfo.Description}"></TextBox>

        <TextBlock >Books</TextBlock>
        <ListView ItemsSource="{Binding BooksInSeria}"></ListView>

        <Button Click="Button_Click_Ok">Save</Button>
        <Button Click="Button_Click_Cancel">Cancel</Button>
        
    </UniformGrid>
</Window>
